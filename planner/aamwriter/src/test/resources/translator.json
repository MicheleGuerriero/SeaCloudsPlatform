{
    "name": "3tier example",
    "nodes": [
        {
            "name": "www",
            "label": "www",
            "type": "WebApplication",
            "properties": {
                "language": "JAVA",
                "artifact": "http://www.example.com/downloads/www.war",
                "min_version": "7",
                "max_version": "8",
                "location": "DYNAMIC",
                "location_option": "FOLLOW_SUN",
                "infrastructure": "platform",
                "container": "webapp.tomcat.TomcatServer",
                "benchmark_rt": "200",
                "benchmark_platform": "hp_cloud_services.2xl",
                "autoscale": true,
                "qos": [
                    {
                        "metric": "AverageResponseTime",
                        "operator": "",
                        "threshold": ""
                    }
                ],
            }
        },
        {
            "name": "webservices",
            "label": "webservices",
            "type": "WebApplication",
            "properties": {
                "language": "JAVA",
                "artifact": "http://www.example.com/downloads/webservices.jar",
                "min_version": "7",
                "max_version": "8",
                "location": "STATIC",
                "location_option": "EUROPE",
                "qos": [
                    {
                        "metric": "AverageResponseTime",
                        "operator": "less_than",
                        "threshold": "1000"
                    },
                    {
                        "metric": "AppAvailable",
                        "operator": "greater_than",
                        "threshold": 99.8
                    }
                ],
                "infrastructure": "compute",
                "num_cpus": "4",
                "disk_size": "256",
                "benchmark_rt": "100",
                "benchmark_platform": "hp_cloud_services.2xl",
                "autoscale": false
            }
        },
        {
            "name": "db_mysql",
            "label": "db_mysql",
            "type": "Database",
            "properties": {
                "category": "database.mysql.MySqlNode",
                "min_version": "5.0",
                "max_version": "5.6",
                "artifact": "mysql_script.sql",
            }
        },
        {
            "name": "db_mariadb",
            "label": "db_mariadb",
            "type": "Database",
            "properties": {
                "category": "database.mariadb.MariaDbNode",
                "min_version": "5.0",
                "max_version": "5.6",
                "artifact": "mariadb_script.sql",
            }
        },
        {
            "name": "db_postgre",
            "label": "db_postgre",
            "type": "Database",
            "properties": {
                "category": "database.postgresql.PostgreSqlNode",
                "artifact": "postgresql_script.sql",
            }
        },
        {
            "name": "php_git",
            "type": "WebApplication",
            "properties": {
                "language": "PHP",
                "artifact": "http://www.github.com/SeaCloudsEU/php.git",
            }
        },
        {
            "name": "php_tarball",
            "type": "WebApplication",
            "properties": {
                "language": "PHP",
                "artifact": "http://www.example.com/downloads/php.zip",
            }
        },
        
    ],
    "links": [
        {
            "source": "www",
            "target": "webservices",
            "properties": {
                "calls": "2",
                "operation_type": "seaclouds.relation.connection.endpoint.host"
            }
        },
        {
            "source": "webservices",
            "target": "db_mysql",
            "properties": {
                "credentials_file": "db.props",
                "operation_type": "seaclouds.relations.databaseconnections.jdbc",
                "calls": "1"
            }
        }
    ],
    "application_requirements": {
        "response_time": "2000",
        "availability": 0.98,
        "cost": "200",
        "workload": "50"
    }
}
